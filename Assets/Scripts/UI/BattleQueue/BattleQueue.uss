.battle-queue {
    width: 100%;
    height: 150px;
    justify-content: center;
    align-items: center;
    padding: 16px;
}

.battle-queue__list {
    flex-direction: row;
    gap: 10px;
}

.battle-queue__entry {
    padding: 4px 8px;
    background-color: rgba(0, 0, 0, 0.1);
    border-radius: 4px;
    color: rgb(255, 255, 255);
}
