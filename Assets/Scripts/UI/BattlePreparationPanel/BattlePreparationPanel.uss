.battle-preparation {
    flex-direction: column;
    justify-content: flex-start;
    align-items: stretch;
    padding: 24px;
    width: 100%;
    height: 100%;
}

.battle-preparation__title {
    align-self: center;
    font-size: 24px;
    unity-font-style: bold;
    margin-top: 8px;
    margin-bottom: auto;
}

.battle-preparation__start {
    align-self: flex-end;
    margin-top: auto;
    min-width: 160px;
}
